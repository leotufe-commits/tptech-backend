generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * =========================
 * ENUMS
 * =========================
 */
enum UserStatus {
  ACTIVE
  PENDING
  BLOCKED
}

/**
 * =========================
 * JOYERÍA (EMPRESA)
 * =========================
 */
model Jewelry {
  id           String @id @default(cuid())
  name         String
  firstName    String
  lastName     String
  phoneCountry String
  phoneNumber  String
  street       String
  number       String
  city         String
  province     String
  postalCode   String
  country      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  auditLogs  AuditLog[]

  @@index([createdAt])
}

/**
 * =========================
 * USUARIOS
 * =========================
 */
model User {
  id       String     @id @default(cuid())
  email    String     @unique
  password String
  name     String?
  status   UserStatus @default(ACTIVE)

  jewelryId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jewelry    Jewelry   @relation(fields: [jewelryId], references: [id], onDelete: Cascade)
  auditLogs  AuditLog[]

  @@index([jewelryId])
}

/**
 * =========================
 * AUDITORÍA / LOGS DE SEGURIDAD
 * =========================
 */
model AuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Qué pasó
  action  String
  success Boolean

  // Contexto (pueden ser null en endpoints públicos)
  userId   String?
  jewelryId String?

  ip        String?
  userAgent String?

  // Info extra (reason, email, etc.)
  meta Json?

  // Relaciones
  user    User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  jewelry Jewelry? @relation(fields: [jewelryId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([action])
  @@index([success])
  @@index([jewelryId, createdAt])
  @@index([userId, createdAt])
}
